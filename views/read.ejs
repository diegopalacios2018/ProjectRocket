<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <header>
        <h1>Registered Users</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/about">About</a>
            <a href="/register.html">Register New User</a>
        </nav>
    </header>
    <main>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (users.length > 0) { %>
                    <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.address %></td>
                        <td>
                            <a href="/edit-user/<%= user.id %>">Edit</a>
                            <form action="/delete-user/<%= user.id %>" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="4">No users found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </main>
</body>
</html>
